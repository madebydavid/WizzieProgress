<form id="resetPassword" action="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) }}" method="post" style="margin-bottom: 0px;">

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Reset Your Password</h3>
    </div>
    <div class="modal-body">
        <p>Please enter your new password and confirm</p>
         {{ form_widget(form) }}
    </div>
    <div class="modal-footer">
        <a class="btn" data-dismiss="modal" aria-hidden="true">Cancel</a>
        <button name="submit" class="btn btn-success">Change Password</button>
    </div>
    
</form>

<script>

    $(function() {
    
        $(document).ready(function() {
            $('form#resetPassword').submit('click', function(e) {
                e.preventDefault();
                $.post(
                    $(this).attr('action'),
                    $(this).serialize(),
                    function(data) {
                        $('form#resetPassword').parent().html(data);
                    }
                );
                
            });
        });
    
    });


</script>
